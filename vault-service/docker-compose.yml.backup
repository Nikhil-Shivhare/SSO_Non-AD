services:
  # ──────────────────────────────────────────────────
  # Postgres Database (single instance, no HA yet)
  # ──────────────────────────────────────────────────
  postgres:
    image: postgres:15-alpine
    container_name: vault-postgres
    restart: unless-stopped
    environment:
      POSTGRES_DB: vault_db
      POSTGRES_USER: vault_user
      POSTGRES_PASSWORD: vault_secret
    ports:
      - "5433:5432"
    volumes:
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
      - vault_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U vault_user -d vault_db"]
      interval: 5s
      timeout: 3s
      retries: 5

  # ──────────────────────────────────────────────────
  # Vault Service (stateless credential store)
  # ──────────────────────────────────────────────────
  vault-service:
    build: .
    container_name: vault-service
    restart: unless-stopped
    ports:
      - "5000:5000"
    environment:
      PORT: 5000
      PGHOST: postgres
      PGPORT: 5432
      PGDATABASE: vault_db
      PGUSER: vault_user
      PGPASSWORD: vault_secret
      PGPOOL_MAX: 10
    depends_on:
      postgres:
        condition: service_healthy

volumes:
  vault_data:
